{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"],
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "types"],
  "exclude": ["node_modules", "dist"],
}
