generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_CONNECTION_STRING")
}

model Order {
  id            String   @id @default(uuid())
  name          String
  basket        Json     @default("[]")
  price         Float
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@map("order")
}

model CoffeeType {
  id            String   @id @default(uuid())
  key           String
  name          String
  price         Float
  ingredients  Json     @default("[]")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  @@map("coffee_type")
}
